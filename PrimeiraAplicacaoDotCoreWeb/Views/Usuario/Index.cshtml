
@using PrimeiraAplicacaoDotCoreWeb.Models.Usuario
@model List<Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Delvask</h1>

<a class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="NovoUsuario">Novo Usuario</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var usuario in Model)
        {
            <tr>
                <td>@usuario.Nome</td>
                <td>@usuario.Sobrenome</td>
                <td>@usuario.Email</td>
            </tr>
        }
    </tbody>
</table>